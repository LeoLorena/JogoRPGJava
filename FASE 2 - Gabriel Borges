                    System.out.println("D) " + questaoiara.get(3));
                    System.out.println("E) " + questaoiara.get(4));
            resposta = entrada.next();
            
            switch (resposta.toUpperCase()) {
            case "A":
                if (questaoiara.get(0).equals("20")) {
                    System.out.println("IARA: Parabéns! Pelo visto, você acertou a resposta e merece ganhar uma recompensa... \n"
                    + "IARA: Te darei uma informação que poderá ser útil ou não, para você resolver os desafios daqui em diante! \n"
                    + "IARA: A dica que posso te dar é uma fórmula, ela é bem específica e popular ao mesmo tempo, às vezes pode te ajudar em algum desafio futuro... Quem sabe... \n");
                    i = 4;
                } else {
                    System.out.println("Resposta incorreta!");
                }
                break;
            case "B":
                if (questaoiara.get(1).equals("20")) {
                    System.out.println("IARA: Parabéns! Pelo visto, você acertou a resposta e merece ganhar uma recompensa... \n"
                    + "IARA: Te darei uma informação que poderá ser útil ou não, para você resolver os desafios daqui em diante! \n"
                    + "IARA: A dica que posso te dar é uma fórmula, ela é bem específica e popular ao mesmo tempo, às vezes pode te ajudar em algum desafio futuro... Quem sabe... \n");
                    i = 4;
                } else {
                    System.out.println("Resposta incorreta!");
                }
                break;
            case "C":
                if (questaoiara.get(2).equals("20")) {
                    System.out.println("IARA: Parabéns! Pelo visto, você acertou a resposta e merece ganhar uma recompensa... \n"
                    + "IARA: Te darei uma informação que poderá ser útil ou não, para você resolver os desafios daqui em diante! \n"
                    + "IARA: A dica que posso te dar é uma fórmula, ela é bem específica e popular ao mesmo tempo, às vezes pode te ajudar em algum desafio futuro... Quem sabe... \n");
                    i = 4;
                } else {
                    System.out.println("Resposta incorreta!");
                }
                break;
            case "D":  
                if (questaoiara.get(3).equals("20")) {
                    System.out.println("IARA: Parabéns! Pelo visto, você acertou a resposta e merece ganhar uma recompensa... \n"
                    + "IARA: Te darei uma informação que poderá ser útil ou não, para você resolver os desafios daqui em diante! \n"
                    + "IARA: A dica que posso te dar é uma fórmula, ela é bem específica e popular ao mesmo tempo, às vezes pode te ajudar em algum desafio futuro... Quem sabe... \n");
                    i = 4;
                } else {
                    System.out.println("Resposta incorreta!");
                }
                break;
            case "E":
                if (questaoiara.get(4).equals("20")) {
                    System.out.println("IARA: Parabéns! Pelo visto, você acertou a resposta e merece ganhar uma recompensa... \n"
                    + "IARA: Te darei uma informação que poderá ser útil ou não, para você resolver os desafios daqui em diante! \n"
                    + "IARA: A dica que posso te dar é uma fórmula, ela é bem específica e popular ao mesmo tempo, às vezes pode te ajudar em algum desafio futuro... Quem sabe... \n");
                    i = 4;
                } else {
                    System.out.println("Resposta incorreta! \n");
                }
                break;
            default:
                System.out.println("Opção inválida! Responda apenas com as opções indicadas! \n");
                break;
            }
            i++;
        } while (i < 3);
        
        if (i == 3){
            System.out.println("IARA: Que pena! Parece que você não conseguiu advinhar a resposta correta... \n"
